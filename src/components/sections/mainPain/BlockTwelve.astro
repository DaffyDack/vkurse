---
import Container from "../../shared/Container.astro";
---

<section id="block_twelve">
    <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
        <div class="wrapper_translation">
            <ul>
                <li>
                    <div class="title">
                        Онлайн-трансляции <br />
                         на платформе <br />
                         ВКурсе
                    </div>
                    <div class="desctiption">
                        Выступления первых лиц, конференции, презентации,
                        форумы, конгрессы, лекции, мастер-классы, ток-шоу,
                        круглые столы и другие индивидуальные форматы проведения
                        мероприятий
                    </div>
                    <a href="/onlineBroadcasts"><button>Подробнее</button></a>
                </li>
                <li></li>
            </ul>
        </div>
    </Container>
</section>

<style lang="scss">
    $color_1: #fff;
    $color_2: #53627a;
    $font-family_1: "Montserrat", sans-serif;

    .wrapper_translation {
        width: 100%;
        color: $color_1;
        ul {
            width: 100%;
            display: flex;
            justify-content: space-between;
            margin: 50px 0;
        }
        li {
            border-radius: 24px;

            background: #001d31;
            &:first-child {
                max-width: 504px;
                min-height: 448px;
                padding: 32px;
                position: relative;
                padding-bottom: 100px;
            }
            &:last-child {
                background: url(/images/video1.gif) no-repeat center;
                background-size: cover;
                max-width: 504px;
                width: 100%;
                height: 448px;
            }
        }
    }
    .title {
        font-family: $font-family_1;
        font-size: 36px;
        line-height: 44px;
        margin-bottom: 32px;
    }
    .desctiption {
        font-size: 18px;
        line-height: 28px;
    }
    button {
        color: $color_2;
        border-radius: 12px;
        text-align: left;
        padding: 10px 40px 10px 17px;
        background: url(/images/arrow_grey.png) no-repeat right 15px top 50%
            #fff;
        background-size: 16px;
        position: absolute;
        bottom: 32px;
        left: 32px;
    }
    @media (max-width: 1070px) {
        .wrapper_translation {
            ul {
                flex-direction: column-reverse;
                align-items: center;
                li {
                    margin-bottom: 20px;
                }
            }
        }
    }
    @media (max-width: 550px) {
        .wrapper_translation {
            .title {
                font-size: 24px;
            }
        }
    }
    @media (min-width: 1900px) {
        .wrapper_translation {
            margin-bottom: 209px;
            
            ul {
                gap: 23px;
                height: 623px;
                li {
                    border-radius: 35px;
                    &:first-child {
                        max-width: inherit;
                        flex-basis: 49.8%;
                        padding: 58px 58px;
                        .title {
                            font-size: 48px;
                            line-height: 60px;
                            margin-bottom: 30px;
                        }
                        .desctiption {
                            letter-spacing: 0.1px;
                        }
                        button {
                            padding: 13px 40px 12px 17px;
                            bottom: 54px;
                            left: 56px;
                            font-size: 14px;
                            letter-spacing: 0.2px;
                        }
                    }
                    &:last-child {
                        max-width: inherit;
                        flex-basis: 49.9%;
                        height: inherit;
                    }
                }
            }
        }
    }
</style>
