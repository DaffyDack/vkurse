---
const { id, title, descriptons, index } = Astro.props;
---

<script>
    import infoTabs from "../tabs/infoTabsForMainPage.js";
    if (window.location.pathname == "/" || window.location.pathname == "/forPartners" || window.location.pathname == "/forLargeCorporateClients") {
        infoTabs.tabsContent.forEach((item) => {
            var x = item.id;
            let input = document.getElementById(`i_${x}1`);
            if (input !== null) {
                input.setAttribute("checked", "checked");
            }
        });
    }
</script>

<div class={`slider`}>
    <input type="radio" name={`switch${id}`} id={`i_${id}${1}`} />
    <input type="radio" name={`switch${id}`} id={`i_${id}${2}`} />
    <div class="wrapper">
        <div class="slide">
            <div class={`heading content content${index + 1}`}>{title}</div>
        </div>
        <div class="slide">
            <div class={`title content content${index + 2}`}>
                {descriptons}
            </div>
        </div>
    </div>
    <div class="controls">
        <label for={`i_${id}${1}`}>⬤</label>
        <label for={`i_${id}${2}`}>⬤</label>
    </div>
</div>
<style lang="scss">
    $font-family_1: "Montserrat", sans-serif;
    .heading {
        font-size: 36px;
        font-family: "Montserrat", sans-serif;
        text-align: left;
        margin-bottom: 65px;
        margin-top: 40px;
    }
    .title {
        font-size: 24px;
    }
    .controls {
        text-align: center;
        margin-top: 10px;
        label {
            &:first-child {
                margin-right: 5px;
            }
            &:last-child {
                margin-left: 5px;
            }
        }
    }

    input {
        opacity: 0;
        width: 0;
        height: 0;
        position: absolute;
    }
    .wrapper {
        width: 100%;
        display: flex;
    }
    .slide {
        width: 0;
    }
    .content {
        width: 77vw;
        height: 100%;
    }

    .wrapper {
        margin: 0 auto;
    }

    span {
        text-align: center;
        line-height: 4rem;
        width: 4rem;
        border-radius: 8rem;
        color: #616161;
        font-size: 2rem;
    }

    .content {
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.6s;
        // min-height: 20px;
        overflow-y: auto;
    }
    #i_tab-a1:checked ~ .wrapper .content1,
    #i_tab-a2:checked ~ .wrapper .content2,
    #i_tab-b1:checked ~ .wrapper .content2,
    #i_tab-b2:checked ~ .wrapper .content3,
    #i_tab-c1:checked ~ .wrapper .content3,
    #i_tab-c2:checked ~ .wrapper .content4,
    #i_tab-d1:checked ~ .wrapper .content4,
    #i_tab-d2:checked ~ .wrapper .content5,
    #i_tab-e1:checked ~ .wrapper .content5,
    #i_tab-e2:checked ~ .wrapper .content6,
    #i_tab-f1:checked ~ .wrapper .content6,
    #i_tab-f2:checked ~ .wrapper .content7,
    #i_tab-g1:checked ~ .wrapper .content7,
    #i_tab-g2:checked ~ .wrapper .content8,
    #i_tab-h1:checked ~ .wrapper .content8,
    #i_tab-h2:checked ~ .wrapper .content9,
    #i_tab-j1:checked ~ .wrapper .content9,
    #i_tab-j2:checked ~ .wrapper .content10,
    #i_tab-k1:checked ~ .wrapper .content10,
    #i_tab-k2:checked ~ .wrapper .content11 {
        opacity: 1;
        pointer-events: auto;
    }

    label {
        color: #e0e0e0;
        transition-duration: 0.6s;
        cursor: pointer;
    }

    #i_tab-a1:checked ~ .controls label[for="i_tab-a1"],
    #i_tab-a2:checked ~ .controls label[for="i_tab-a2"],
    #i_tab-b1:checked ~ .controls label[for="i_tab-b1"],
    #i_tab-b2:checked ~ .controls label[for="i_tab-b2"],
    #i_tab-c1:checked ~ .controls label[for="i_tab-c1"],
    #i_tab-c2:checked ~ .controls label[for="i_tab-c2"],
    #i_tab-d1:checked ~ .controls label[for="i_tab-d1"],
    #i_tab-d2:checked ~ .controls label[for="i_tab-d2"],
    #i_tab-e1:checked ~ .controls label[for="i_tab-e1"],
    #i_tab-e2:checked ~ .controls label[for="i_tab-e2"],
    #i_tab-f1:checked ~ .controls label[for="i_tab-f1"],
    #i_tab-f2:checked ~ .controls label[for="i_tab-f2"],
    #i_tab-g1:checked ~ .controls label[for="i_tab-g1"],
    #i_tab-g2:checked ~ .controls label[for="i_tab-g2"],
    #i_tab-h1:checked ~ .controls label[for="i_tab-h1"],
    #i_tab-h2:checked ~ .controls label[for="i_tab-h2"],
    #i_tab-j1:checked ~ .controls label[for="i_tab-j1"],
    #i_tab-j2:checked ~ .controls label[for="i_tab-j2"],
    #i_tab-k1:checked ~ .controls label[for="i_tab-k1"],
    #i_tab-k2:checked ~ .controls label[for="i_tab-k2"] {
        color: #424242;
    }

    @media (max-width: 665px) {
        .wrapper {
            .heading {
                font-size: 24px;
                margin: 0;
            }
            .title {
                font-size: 14px;
            }
            .slide {
                .heading.content {
                    line-height: 32px;
                }
            }
        }
    }
</style>
