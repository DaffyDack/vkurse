---
import Container from "../../shared/Container.astro";
import { TARIFS } from "./config/tarifs.json";
---

<section id="block_five">
    <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
        <div class="wrapper_tarifs">
            <div class="heading">Тарифы для стандартных мероприятий</div>
            <div class="title mb-[50px]">
                У вас нестандартное мероприятие? Заполните форму, наши менеджеры
                с вами <br /> свяжутся!
            </div>
            <div class="wrap">
                {
                    TARIFS.map((item) => {
                        return (
                            <div>
                                <p>{item.name}</p>
                                <ul>
                                    {item.list.map((prod) => {
                                        return <li>{prod}</li>;
                                    })}
                                </ul>
                                <div class="price">{item.price}</div>
                                <button>{item.button}</button>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </Container>
</section>
<style lang="scss">
    $font-family_1: "Montserrat", sans-serif;
    #block_five {
        background: #f3f6fa;
        position: relative;
        &::after {
            content: "";
            position: absolute;
            top: -51px;
            left: 0;
            width: 120%;
            height: 100px;
            background: #f3f6fa;
            transform: rotateZ(-2deg);
            border-radius: 30%;
        }
    }
    .wrapper_tarifs {
        width: 100%;
        background: #f3f6fa;
        position: relative;
        padding-top: 50px;
        overflow: hidden;
        .heading {
            font-size: 36px;
            font-family: "Montserrat", sans-serif;
            text-align: center;
            color: #1c2129;
            margin-bottom: 24px;
            margin-top: 24px;
        }
        .title {
            text-align: center;
            font-size: 22px;
            span {
                color: #0093f5;
            }
        }
        .wrap {
            display: flex;
            justify-content: space-around;
            flex-wrap: nowrap;
            align-items: stretch;
            flex-direction: row;
            padding-bottom: 30px;
            gap: 24px;
            > div {
                border-radius: 24px;
                text-align: center;
                padding: 24px;
                background: #fff;
                flex: 1 1 328px;
                .price {
                    font-size: 22px;
                    margin-bottom: 16px;
                    padding-top: 48px;
                    font-family: $font-family_1;
                }
                p {
                    font-size: 22px;
                    font-family: $font-family_1;
                    margin-bottom: 24px;
                    color: #53627a;
                }
                ul > li {
                    text-align: left;
                    color: #53627a;
                    margin-bottom: 20px;
                    padding-left: 30px;
                    background: url(/images/onlineBroadcasts/check.png)
                        no-repeat top 50% left;
                    background-size: 25px;
                    font-weight: 400;
                }
                button {
                    width: 100%;
                    padding: 0px;
                    border-radius: 12px;
                    height: 44px;
                }
                &:nth-child(even) {
                    border: 2px solid #009373;
                    button {
                        color: #fff;
                        background: #009373;
                        border: 2px solid #009373;
                        &:hover {
                            background: #00765c;
                        }
                    }
                }
                &:nth-child(odd) {
                    border: 2px solid transparent;
                    button {
                        color: #009373;
                        background: #ebfffb;
                        border: 2px solid #009373;
                        &:hover {
                            color: #00765c;
                        }
                    }
                }
            }
        }
    }
    @media (max-width: 855px) {
        .wrapper_tarifs {
            .wrap {
                flex-direction: column;
                align-items: center;
                div {
                    max-width: 336px;
                }
            }
            .title {
                font-size: 16px;
            }
        }
    }
</style>
