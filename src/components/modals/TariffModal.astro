          tariff: tariffInput300.value,
          url: window.location.href,
        }),
        headers: {
          "Content-type": "application/json; charset=UTF-8",
        },
      })
        .then((response) => response.json())
        .then((json) => {
          // loader.classList.remove("visible");
          infoError.classList.remove("animate-[fade-out_0.3s_both]");
          infoError.removeAttribute("data-te-toast-hide");
          infoError.setAttribute("data-te-toast-show", true);
          console.log("что то пошло не так", error);
        });
    } else {
      console.log("не отправляем");
    }
  });*/
</script>

<style lang="scss">
  .modal {
    &__title {
      font-size: 30px;
      line-height: 1.2;
      font-weight: 600;
    }

    &__description {
      font-weight: 300;
    }

    &__inner-wrapper {
      background-color: #fff;
      padding: 32px 40px;
      display: flex;
      flex-direction: column;
      border-radius: 24px;
    }
  }

  .submit-button {
    padding: 12px 16px;
    width: 100%;
    border-radius: 12px;
    background: var(--BG-Main-Primary, #009373);
    color: #fff;
  }
  .invalid {
    border: 2px solid #d93025;
    .error {
      display: flex !important;
    }
  }
